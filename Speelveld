public class Speelveld extends javax.swing.JPanel implements ActionListener {

    private MapBuilder m = new MapBuilder();
    private Speler s = new Speler();

    private Eindvlak eind = new Eindvlak(Color.GREEN, 45, 45);

    private Vlak[][] vlakken;

    public Speelveld(Color kleur, int width, int height) {
        initComponents();

        setBackground(kleur);
        setSize(width, height);
        this.setFocusable(true);
        requestFocus();
        InstantieerVlakken();
        Timer t = new Timer(1000, this);
        t.start();
    }

