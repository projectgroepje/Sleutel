package timerentekenen;

import java.awt.Image;
import java.io.File;
import java.util.Scanner;
import javax.swing.ImageIcon;

/**
 *
 * @author AnnMarie
 */
public class maps {

    private Scanner m;
    private String map[] = new String[10];
    private Image normaalPanel, barricade, muur, sleutel;

    public maps() {
        ImageIcon img = new ImageIcon("/Users/AnnMarie/Desktop/project/normaal.png");
        normaalPanel = img.getImage();
        img = new ImageIcon("/Users/AnnMarie/Desktop/project/wall.png");
        barricade = img.getImage();
        img = new ImageIcon("/Users/AnnMarie/Desktop/project/muur.png");
        muur = img.getImage();
        img = new ImageIcon("/Users/AnnMarie/Desktop/project/maze.png");
        sleutel = img.getImage();

        openFile();
        readFile();
        closeFile();

    }

    public Image getNormaalPanel() {
        return normaalPanel;
    }

    public Image getbarricade() {
        return barricade;
    }

    public Image getMuur() {
        return muur;
    }

    public Image getsleutel() {
        return sleutel;
    }

    public String getMap(int x, int y) {
        String index = map[y].substring(x, x + 1);
        return index;
    }

    public void openFile() {
        try {
            m = new Scanner(new File("/Users/AnnMarie/Desktop/project/map.txt"));
        } catch (Exception e) {
            System.out.println("error loading");

        }

    }

    private void readFile() {
        while (m.hasNext()) {
            for (int i = 0; i < 10; i++) {
                map[i] = m.next();
            }
        }
    }

    private void closeFile() {
        m.close();
    }

}
