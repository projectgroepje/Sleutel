package timerentekenen;

import java.awt.Image;
import javax.swing.*;

/**
 *
 * @author AnnMarie
 */
public class Speler {

    private int tileX, tileY;

    private Image speler1;

    public Speler() {

        ImageIcon img = new ImageIcon("/Users/AnnMarie/Desktop/project/speler.png");
        speler1 = img.getImage();

        tileX = 0;
        tileY = 0;

    }

    public Image getPlayer() {
        return speler1;
    }

    public int getTileX() {
        return tileX;
    }

    public int getTileY() {
        return tileY;
    }

    public void move(int tileX, int tileY) {

        this.tileX += tileX;
        this.tileY += tileY;

    }

    //check if speler is at the eind
    public void checkSpelerPos() {

        if (tileX == 9 && tileY == 9) {
            JOptionPane j = new JOptionPane();
            j.showMessageDialog(null, "Gefeliciteerd, je hebt gewonnen!", "resultaat", JOptionPane.INFORMATION_MESSAGE);
            System.exit(0);

        }
    }


    public void printPos() {
        System.out.println("x: " + tileX + " Y: " + tileY);
    }

}
